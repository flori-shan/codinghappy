<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:property-placeholder location="classpath:properties/bean.properties" file-encoding="UTF-8"></context:property-placeholder>

	<!-- 具体扫描那个文件包 -->
	<context:component-scan base-package="cn.nihility.spring"></context:component-scan>
	
	<bean id="beanxml" class="cn.nihility.spring.beans.BeanDemoXml" scope="prototype">
	       <property name="id" value="${bean.xml.id}"></property>
	       <property name="name" value="${bean.xml.name}"></property>
	</bean>
	<bean id="beanxml01" class="cn.nihility.spring.beans.BeanDemoXml" scope="singleton">
	       <property name="id" value="202"></property>
	       <property name="name" value="bean自填名称"></property>
	</bean>
	<bean id="beanxml02" class="cn.nihility.spring.beans.BeanDemoXml">
	       <constructor-arg name="id" value="2003"></constructor-arg>
	       <constructor-arg name="name" value="constructor名称"></constructor-arg>
	</bean>
	<bean id="beanxml03" class="cn.nihility.spring.beans.BeanDemoXml">
	       <constructor-arg index="0" value="2003"></constructor-arg>
	       <constructor-arg index="1" value="constructor_index_名称"></constructor-arg>
	</bean>

</beans>
